<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.idea360.oracle.dao.JsDepartmentMapper">
    <select id="listByDepartmentIds" resultType="cn.idea360.oracle.model.JsDepartment">
        SELECT
        department_id, name
        FROM
        js_department
        <where>
            <if test="departmentIds != null and departmentIds.size() > 0">
                department_id in
                <foreach collection="departmentIds" item="item"  index="index" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>
</mapper>